{
  "typescript": {
    "tsdk": "node_modules/typescript/lib"
  },
  "javascript": {
    "suggest": {
      "autoImports": true,
      "completeFunctionCalls": true
    }
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true,
      "**/.next": true,
      "**/coverage": true,
      "**/.env": true,
      "**/.env.*": true
    }
  },
  "editor": {
    "formatOnSave": true,
    "codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "defaultFormatter": "esbenp.prettier-vscode"
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true,
      "**/.next": true,
      "**/coverage": true,
      "**/.env": true,
      "**/.env.*": true
    }
  },
  "typescript.preferences": {
    "importModuleSpecifier": "non-relative",
    "importModuleSpecifierEnding": "minimal"
  }
}