{
  "typescript": {
    "tsdk": "node_modules/typescript/lib",
    "preferences": {
      "importModuleSpecifier": "non-relative",
      "importModuleSpecifierEnding": "minimal",
      "organizeImports": true,
      "autoImportFileExcludePatterns": ["**/node_modules/**", "**/dist/**"]
    }
  },
  "javascript": {
    "suggest": {
      "autoImports": true,
      "completeFunctionCalls": true,
      "names": true,
      "paths": true
    }
  },
  "files": {
    "exclude": {
      "**/.git": true,
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true,
      "**/.next": true,
      "**/coverage": true,
      "**/.env": true,
      "**/.env.*": true,
      "**/*.spec.ts": true,
      "**/*.test.ts": true
    },
    "associations": {
      "*.entity.ts": "typescript",
      "*.dto.ts": "typescript",
      "*.interface.ts": "typescript"
    }
  },
  "editor": {
    "formatOnSave": true,
    "codeActionsOnSave": {
      "source.fixAll.eslint": true,
      "source.organizeImports": true
    },
    "defaultFormatter": "esbenp.prettier-vscode",
    "rulers": [80, 100],
    "wordWrap": "off",
    "tabSize": 2,
    "insertSpaces": true
  },
  "search": {
    "exclude": {
      "**/node_modules": true,
      "**/dist": true,
      "**/build": true,
      "**/.next": true,
      "**/coverage": true,
      "**/.env": true,
      "**/.env.*": true,
      "**/*.spec.ts": true,
      "**/*.test.ts": true
    }
  },
  "typescript.preferences": {
    "importModuleSpecifier": "non-relative",
    "importModuleSpecifierEnding": "minimal",
    "organizeImports": true
  },
  "nest": {
    "autoImport": true,
    "suggestDecorators": true,
    "suggestInjectables": true
  }
}
